<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0CF1A"
    tools:context=".FragmentD">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50sp"
        android:layout_marginTop="150sp"
        android:src="@drawable/lamp" />


    <TextView
        android:id="@+id/Title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit word document"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginTop="500sp"
        android:layout_marginStart="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description4"
        android:layout_marginStart="290sp"
        android:layout_marginTop="20sp"
        android:text="Done"
        android:textColor="@color/white"
        android:textSize="20sp" />



    <TextView
        android:id="@+id/description4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open, edit, and save Word file all\nwithin docs."
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginTop="540sp"
        android:layout_marginStart="20sp"/>


</RelativeLayout>